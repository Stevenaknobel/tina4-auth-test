<form id="monitoredSitesForm" enctype="multipart/form-data" xmlns="http://www.w3.org/1999/html">
    <div class="row">
        <div class="form-group col-md-6">
            <label for="siteId">Site Id</label>
            <input class="form-control" type="text" id="siteId"
                   name="siteId" placeholder="Site Id"
                   value="{{ data.siteId }}">
        </div>
        <div class="form-group col-md-6">
            <label for="companyId">Company Id</label>
            <input class="form-control" type="text" id="companyId"
                   name="companyId" placeholder="Company Id"
                   value="{{ data.companyId }}">
        </div>
        <div class="form-group col-md-6">
            <label for="typeId">Type Id</label>
            <input class="form-control" type="text" id="typeId"
                   name="typeId" placeholder="Type Id"
                   value="{{ data.typeId }}">
        </div>
        <div class="form-group col-md-6">
            <label for="url">Url</label>
            <input class="form-control" type="text" id="url"
                   name="url" placeholder="Url"
                   value="{{ data.url }}">
        </div>
        <div class="form-group col-md-6">
            <label for="siteName">Site Name</label>
            <input class="form-control" type="text" id="siteName"
                   name="siteName" placeholder="Site Name"
                   value="{{ data.siteName }}">
        </div>
        <div class="form-group col-md-6">
            <label for="status">Status</label>
            <input class="form-control" type="text" id="status"
                   name="status" placeholder="Status"
                   value="{{ data.status }}">
        </div>
        <div class="form-group col-md-6">
            <label for="createdAt">Created At</label>
            <input class="form-control" type="text" id="createdAt"
                   placeholder="Created At"
                   value="{{ data.createdAt }}">
        </div>
    </div>
    {{"monitoredSitesForm" | formToken | raw }}
</form>
