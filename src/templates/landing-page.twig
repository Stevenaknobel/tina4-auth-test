<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Landing Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 30px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 10px;
        }

        th, td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        .status-up {
            color: green;
        }

        .status-down {
            color: red;
        }

        .status-pending {
            color: gray;
        }

        .summary {
            margin-bottom: 20px;
            font-size: 16px;
        }

        .summary span {
            margin-right: 15px;
        }

        .btn {
            background-color: #007BFF;
            color: white;
            padding: 6px 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        a {
            text-decoration: none;
            color: #007BFF;
        }

        a:hover {
            text-decoration: underline;
        }

        .search-bar {
            margin-bottom: 15px;
            padding: 8px;
            width: 300px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .sortable {
            cursor: pointer;
        }

        .sort-arrow {
            font-size: 10px;
            margin-left: 5px;
        }
    </style>
</head>
<body>
<h1>Welcome {{ username }}!</h1>

<div class="summary">
    <strong>Services:</strong>
    <span class="status-up">ðŸŸ¢ {{ upCount }} Up</span>
    <span class="status-down">ðŸ”´ {{ downCount }} Down</span>
    <span class="status-pending">âšª {{ pendingCount }} Pending</span>
</div>

<h2>Monitored Sites</h2>

<!-- Search bar -->
<input type="text" id="searchBar" class="search-bar" placeholder="Search by site name, URL, or status..." />

<table>
    <thead>
    <tr>
        <th class="sortable" id="siteNameHeader">
            Site Name
            <span class="sort-arrow" id="siteNameArrow">â†“</span>
        </th>
        <th class="sortable" id="urlHeader">
            URL
            <span class="sort-arrow" id="urlArrow">â†“</span>
        </th>
        <th class="sortable" id="statusHeader">
            Last Status
            <span class="sort-arrow" id="statusArrow">â†“</span>
        </th>
        <th class="sortable" id="checkTypeHeader">
            Check Type
            <span class="sort-arrow" id="checkTypeArrow">â†“</span>
        </th>
        <th class="sortable" id="dateHeader">
            Last Checked
            <span class="sort-arrow" id="dateArrow">â†“</span>
        </th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody id="siteTableBody">
    {% for item in sites %}
        <tr>
            <td>{{ item.siteName }}</td>
            <td>{{ item.url }}</td>
            <td>
                {% if item.status == "up" %}
                    <span class="status-up">ðŸŸ¢ {{ item.status }}</span>
                {% elseif item.status == "down" %}
                    <span class="status-down">ðŸ”´ {{ item.status }}</span>
                {% else %}
                    <span class="status-pending">âšª {{ item.status }}</span>
                {% endif %}
            </td>
            <td>{{ item.type }}</td>
            <td>{{ item.checkedAt | date("Y-m-d H:i") }}</td>
            <td>
                <form method="post" action="/check-site">
                    <input type="hidden" name="site_id" value="{{ item.siteId }}">
                    <input type="hidden" name="type_id" value="{{ item.typeId }}">
                    <button class="btn" type="submit">Check Now</button>
                    {{ "check-site" | formToken | raw }}
                </form>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<p style="margin-top: 15px;">
    <a href="/create-site">+ Add New Monitored Site</a>
</p>

<br>
<a href="/logout">Logout</a>

<!-- Add the JavaScript link -->
<script src="/src/public/js/filters.js"></script>
</body>
</html>
